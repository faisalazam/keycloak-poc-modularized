{
  "info": {
    "name": "Keycloak API Testing",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "client_id", "value": "YOUR_CLIENT_ID", "disabled": false },
            { "key": "username", "value": "YOUR_USERNAME", "disabled": false },
            { "key": "password", "value": "YOUR_PASSWORD", "disabled": false },
            { "key": "grant_type", "value": "password", "disabled": false }
          ]
        },
        "url": {
          "raw": "http://localhost:8080/auth/realms/YOUR_REALM/protocol/openid-connect/token",
          "protocol": "http",
          "host": ["localhost:8080"],
          "path": ["auth", "realms", "YOUR_REALM", "protocol", "openid-connect", "token"]
        }
      }
    },
    {
      "name": "Logout",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "client_id", "value": "YOUR_CLIENT_ID", "disabled": false },
            { "key": "refresh_token", "value": "{{refresh_token}}", "disabled": false }
          ]
        },
        "url": {
          "raw": "http://localhost:8080/auth/realms/YOUR_REALM/protocol/openid-connect/logout",
          "protocol": "http",
          "host": ["localhost:8080"],
          "path": ["auth", "realms", "YOUR_REALM", "protocol", "openid-connect", "logout"]
        }
      }
    },
    {
      "name": "Refresh Token",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/x-www-form-urlencoded"
          }
        ],
        "body": {
          "mode": "urlencoded",
          "urlencoded": [
            { "key": "client_id", "value": "YOUR_CLIENT_ID", "disabled": false },
            { "key": "refresh_token", "value": "{{refresh_token}}", "disabled": false },
            { "key": "grant_type", "value": "refresh_token", "disabled": false }
          ]
        },
        "url": {
          "raw": "http://localhost:8080/auth/realms/YOUR_REALM/protocol/openid-connect/token",
          "protocol": "http",
          "host": ["localhost:8080"],
          "path": ["auth", "realms", "YOUR_REALM", "protocol", "openid-connect", "token"]
        }
      }
    },
    {
      "name": "Forgot Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_access_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"YOUR_USERNAME\"}"
        },
        "url": {
          "raw": "http://localhost:8080/auth/admin/realms/YOUR_REALM/users/USER_ID/reset-password",
          "protocol": "http",
          "host": ["localhost:8080"],
          "path": ["auth", "admin", "realms", "YOUR_REALM", "users", "USER_ID", "reset-password"]
        }
      }
    },
    {
      "name": "Reset Password",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_access_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"type\":\"password\",\"temporary\":false,\"value\":\"NEW_PASSWORD\"}"
        },
        "url": {
          "raw": "http://localhost:8080/auth/admin/realms/YOUR_REALM/users/USER_ID/reset-password",
          "protocol": "http",
          "host": ["localhost:8080"],
          "path": ["auth", "admin", "realms", "YOUR_REALM", "users", "USER_ID", "reset-password"]
        }
      }
    }
  ]
}
